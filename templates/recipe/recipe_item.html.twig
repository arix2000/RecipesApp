<div class="recipe-item bg-gray-800 text-white p-4 rounded-2xl shadow-md">
    <div class="recipe-image mb-4">
        {% if recipe.imageUrl %}
            <img src="{{ recipe.imageUrl }}" alt="{{ recipe.title }}" class="w-full h-48 object-cover rounded-2xl">
        {% else %}
            <div class="w-full h-48 bg-gray-700 rounded-lg flex items-center justify-center text-gray-500">
                No Image Available
            </div>
        {% endif %}
    </div>
    <div class="recipe-content">
        <h3 class="text-xl font-bold mb-2">{{ recipe.title }}</h3>
        <p class="text-gray-400 mb-2 line-clamp-2">{{ recipe.ner }}</p>
        <p class="text-gray-400">User Name</p> <!-- Placeholder for user name -->
    </div>
</div>