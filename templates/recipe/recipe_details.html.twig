{% extends 'base.html.twig' %}

{% block title %}{{ recipe.title }} | Recipe Details{% endblock %}
{% block stylesheets %}
    <style>
        .recipe-details-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="recipe-details-wrapper">
        <div class="bg-gray-800 text-white p-6 rounded-2xl shadow-md">
            <div class="flex flex-col md:flex-row md:justify-between">
                <a href="{{ path('recipes') }}">
                    <button class="bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg mb-4 flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        All recipes
                    </button>
                </a>
                {% if app.user and (recipe.user.id == app.user.id or app.user.email == "root@root.com") %}
                <div class="flex md:flex-row md:ml-auto">
                    <a href="/recipe/edit/{{ recipe.id }}">
                        <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg mb-4 flex items-center">
                            {% include 'recipe/edit.svg.twig' %}
                            <div class="ml-2"></div>
                            Edit Recipe
                        </button>
                    </a>
                    <a href="/recipe/delete/{{ recipe.id }}">
                        <button class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg flex items-center ml-4">
                            {% include 'recipe/delete.svg.twig' %}
                            <div class="ml-2"></div>
                            Delete Recipe
                        </button>
                    </a>
                </div>
                {% endif %}
            </div>

            <!-- Recipe Image -->
            <div class="recipe-image mb-4 relative">
                <div class="w-full h-64 bg-gray-700 rounded-lg flex items-center justify-center text-gray-500 shimmer absolute top-0 left-0 z-10"
                     id="shimmer-{{ recipe.id }}">
                    Loading...
                </div>
                {% if recipe.imageUrl %}
                    <img src="{{ recipe.imageUrl }}" alt="{{ recipe.title }}"
                         class="w-full h-64 object-cover rounded-2xl"
                         onload="document.getElementById('shimmer-{{ recipe.id }}').style.display='none'">
                {% else %}
                    <div class="w-full h-64 bg-gray-700 rounded-lg flex items-center justify-center text-gray-500">
                        No Image Available
                    </div>
                {% endif %}
            </div>

            <!-- Recipe Title -->
            <h1 class="text-3xl font-bold mb-4">{{ recipe.title }}</h1>

            <!-- Recipe Metadata -->
            <div class="mb-6">
                {% if recipe.source %}
                    <p class="text-gray-400">Source: <span class="text-white">{{ recipe.source }}</span></p>
                {% endif %}
                {% if recipe.site %}
                    <a href="{{ recipe.link }}" target="_blank" class="text-gray-400">Site: <span class="text-blue-400">{{ recipe.site }}</span></a>
                {% endif %}
                <p class="text-gray-400">
                    Submitted by:
                    <span class="text-white">
                    {% if recipe.user.email == 'root@root.com' %}
                        Admins
                    {% else %}
                        {{ recipe.user.firstName }} {{ recipe.user.lastName }}
                    {% endif %}
                </span>
                </p>
            </div>

            <!-- Recipe Ingredients -->
            <div class="mb-6">
                <h2 class="text-2xl font-bold mb-2">Ingredients</h2>
                <ul class="list-disc pl-5">
                    {% for ingredient in ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Recipe Directions -->
            <div class="mb-6">
                <h2 class="text-2xl font-bold mb-2">Directions</h2>
                <ul class="list-disc pl-5">
                    {% for direction in directions %}
                        <li>{{ direction }}</li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Recipe NER -->
            <div class="mb-6">
                <h2 class="text-2xl font-bold mb-2">Contains</h2>
                <p class="text-gray-400">{{ ner }}</p>
            </div>
        </div>
    </div>
{% endblock %}
